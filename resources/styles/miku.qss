/* ============================================================
   LISTS
   ============================================================ */

QListWidget {
    background-color: #373737;
    border: 1px solid #808080;
    padding: 5px;
    outline: none;
    /* Disable standard selection decoration */
    show-decoration-selected: 0;
    border-radius: 3px;
}

/* Remove dotted focus rectangle and highlighted border */
QListWidget:focus {
    outline: none;
    border: 1px solid #808080;
}

QListWidget::item {
    padding: 5px;
    border: none;
}

/* --- Normal state --- */
QListWidget::item {
    background-color: transparent;
    color: #e0e0e0;
}

/* --- Hover --- */
QListWidget::item:hover {
    background-color: #4a4a4a;
    color: #ffffff;
    border-radius: 0px;
}

/* --- ACTIVE selection disabled --- */
QListWidget::item:selected:active {
    background-color: transparent;
    color: #e0e0e0;
    border-radius: 0px;
}

/* --- INACTIVE selection disabled --- */
QListWidget::item:selected:!active {
    background-color: transparent;
    color: #e0e0e0;
    border-radius: 0px;
}

/* --- Hover on selected (keep hover) --- */
QListWidget::item:selected:hover {
    background-color: #4a4a4a;
    color: #ffffff;
    border-radius: 0px;
}

/* --- Disabled item --- */
QListWidget::item:disabled {
    background-color: transparent;
    color: #666666;
}

/* ============================================================
   TREES
   ============================================================ */

/* QTreeWidget — selection disabled, hover only */
QTreeWidget {
    background-color: #373737;
    border: 1px solid #808080;
    padding: 5px;
    outline: none;
    show-decoration-selected: 0;
    border-radius: 3px;
}

QTreeWidget:focus {
    outline: none;
    border: 1px solid #808080;
}

/* Normal state */
QTreeWidget::item {
    padding: 5px;
    background-color: transparent;
    color: #e0e0e0;
}

/* Hover */
QTreeWidget::item:hover {
    background-color: #4a4a4a;
    color: #ffffff;
    border-radius: 0px;
}

/* SYSTEM ACTIVE selection disabled */
QTreeWidget::item:selected:active {
    background-color: transparent;
    color: #e0e0e0;
}

/* SYSTEM INACTIVE selection disabled */
QTreeWidget::item:selected:!active {
    background-color: transparent;
    color: #e0e0e0;
}

/* Hover on selected item */
QTreeWidget::item:selected:hover {
    background-color: #4a4a4a;
    color: #ffffff;
    border-radius: 0px;
}

/* Programmatic selection (active book) — priority */
QTreeWidget::item[playing="true"] {
    background-color: #e12885 !important;
    color: #ffffff !important;
    border-radius: 0px;
}


/* ============================================================
   SLIDERS
   ============================================================ */

QSlider::groove:horizontal {
    background: #808080;
    height: 10px;
    border-radius: 0px;
}

QSlider::handle:horizontal {
    background: #e12885;
    width: 16px;
    height: 16px;
    margin: -5px 0;
    border: 2px solid #373737;
    border-radius: 0px;
}

QSlider::handle:horizontal:hover {
    background: #e12885;
}

QSlider::handle:horizontal:pressed {
    background: #137a7f;
}

QSlider::sub-page:horizontal {
    background-color: #e12885;
    border-radius: 0px;
}

QSlider::add-page:horizontal {
    background: #808080;
    border-radius: 0px;
}

QSlider#speedSlider::sub-page:horizontal {
    background-color: #808080;
}

/* ============================================================
   PROGRESS BARS
   ============================================================ */

QProgressBar {
