    padding: 3px;
    border-radius: 3px;
}

/* ============================================================
   ABOUT WINDOW
   ============================================================ */

QFrame#aboutContainer {
    background-color: @bg-tabbar;
    border: 1px solid @bg-main;
    border-radius: 3px;
    padding: 40px 30px 30px 30px; /* Replacing layout margins (T, R, B, L) */
