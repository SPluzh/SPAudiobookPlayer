/* ============================================================
   SPLITTER
   ============================================================ */

QSplitter::handle {
    background-color: #808080;
    width: 2px;
}

QSplitter::handle:horizontal {
    width: 2px;
}

QSplitter::handle:vertical {
    height: 2px;
}

QSplitter::handle:hover {
    background-color: #e12885;
}

QSplitter::handle:pressed {
    background-color: #e12885;
}

/* ============================================================
   SCROLLBARS
   ============================================================ */

/* Vertical scrollbar */
QScrollBar:vertical {
    background-color: #373737;
    width: 12px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background-color: #808080;
    min-height: 30px;
    margin: 2px;
}

QScrollBar::handle:vertical:hover {
    background-color: #e12885;
}

QScrollBar::handle:vertical:pressed {
    background-color: #e12885;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0;
    border: none;
    background: none;
}

QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: none;
}

/* Horizontal scrollbar */
QScrollBar:horizontal {
    background-color: #373737;
    height: 12px;
    margin: 0;
}

QScrollBar::handle:horizontal {
    background-color: #808080;
    min-width: 30px;
    margin: 2px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #e12885;
}

QScrollBar::handle:horizontal:pressed {
    background-color: #e12885;
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    width: 0;
    border: none;
    background: none;
}

QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal {
    background: none;
}

/* ============================================================
   FRAMES
   ============================================================ */

QFrame {
    border: none;
}

QFrame#separator {
    background-color: #808080;
    max-height: 2px;
    min-height: 2px;
}

/* ============================================================
   MENU
   ============================================================ */
/* Top menu bar color */
QMenuBar {
    background-color: #373737;  /* main bar background */
    color: #eaeaea;             /* menu item text color */
    font-size: 13px;
}

QMenuBar::item {
    padding: 6px 10px;
    background-color: transparent;
}

QMenuBar::item:selected {
    background-color: #4a4a4a;
}

/* Specific styling for Library Context Menu */
QMenu#libraryContextMenu {
    background-color: #444444;
}

QMenu {
    background-color: #373737;
    border: 1px solid #444444;
    padding: 2px;
    margin: 3px;
    border-radius: 3px;
    min-width: 90px;
}

QMenu::item {
    padding: 2px 2px;
    color: #eaeaea;
}

QMenu::item:selected {
    background-color: #e12885;
    color: #ffffff;

}

QMenu::item:pressed {
    background-color: #137a7f;

}

QMenu::separator {
    height: 1px;
    background-color: #808080;
    margin: 5px 10px;
}

QMenu::indicator {
    width: 13px;
    height: 13px;
}

/* ============================================================
   SETTINGS WINDOW
   ============================================================ */
/* Dialog window background */
QDialog {
    background-color: #373737;  /* dark grey background */
    color: #eaeaea;             /* text color inside dialog */
    border-radius: 3px;
}

/* Background of entire tab widget */
QTabWidget {
    background-color: #373737; /* tab content background */
}

/* Tabs on top */
QTabBar {
    background-color: #2c2c2c; /* background of the strip with tabs */
}

QTabBar::tab {
    background-color: #444444;  /* tab background */
    color: #eaeaea;             /* text color */
    padding: 8px 20px;
    border: 1px solid #808080;  /* border around tab */
    border-bottom: none;         /* to be "connected" with content */
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
    margin-right: 2px;
}

/* Tab on hover */
QTabBar::tab:hover {
    background-color: #e12885;
    color: #ffffff;
}

/* Active tab */
QTabBar::tab:selected {
    background-color: #e12885;
    border-bottom: 1px solid #e12885; /* to visually merge with content */
}

/* Inactive tabs */
QTabBar::tab:!selected {
    margin-top: 2px;  /* separate inactive from active */
}

