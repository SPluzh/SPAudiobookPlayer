}

#theme_primary {
    color: @accent;
}

#overlay_background {
    color: @overlay-bg;
}

#overlay_progress_bg {
    color: @overlay-progress-bg;
}

#separator_dot {
    color: @separator-dot;
}

#delegate_info_font {
