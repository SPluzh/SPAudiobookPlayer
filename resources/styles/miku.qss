/* Instructions text */
QLabel#placeholder_text {
    font-family: 'Segoe UI', sans-serif;
    font-size: 15px;
    color: @border;
}

/* Icon color (using text color property) */
QLabel#placeholder_icon {
    color: @accent;
}

/* ============================================================
   DROP OVERLAY
   ============================================================ */
QLabel#dropOverlay {
    background-color: @overlay-progress-bg;
    color: @text-bright;
    font-size: 24px;
    font-weight: bold;
    border: 4px dashed @accent;
    border-radius: 10px;
}


BookProgressBar {
    qproperty-markerColor: @accent-dark;
}